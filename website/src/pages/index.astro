---
import BaseLayout from '../layouts/BaseLayout.astro';
import CodeBlock from '../components/CodeBlock.astro';

const installCommands = `npm install -g @leixusam/foundry
foundry init
foundry`;
---

<BaseLayout title="Foundry - Autonomous Development">
  <section class="hero">
    <div class="container">
      <h1 class="tagline">
        Autonomous development<br />
        that works on your tickets<br />
        while you sleep.
      </h1>

      <div class="install-block">
        <CodeBlock code={installCommands} />
        <p class="install-alt">or install locally: <code>npx foundry init</code></p>
      </div>
    </div>
  </section>

  <section class="outcomes">
    <div class="container">
      <h2 class="outcomes-title">What happens when you run Foundry:</h2>

      <div class="flow-diagram">
        <div class="flow-step">
          <div class="flow-box">You create<br />a ticket</div>
        </div>
        <div class="flow-arrow">→</div>
        <div class="flow-step">
          <div class="flow-box">Foundry<br />works</div>
        </div>
        <div class="flow-arrow">→</div>
        <div class="flow-step">
          <div class="flow-box">You review<br />code</div>
        </div>
      </div>

      <ul class="outcomes-list">
        <li>Creates a branch for the ticket</li>
        <li>Researches your codebase</li>
        <li>Plans the implementation</li>
        <li>Writes and tests code</li>
        <li>Updates Linear with progress</li>
        <li>Opens a PR when done</li>
      </ul>

      <a href="/how-it-works" class="cta-link">Learn how it works →</a>
    </div>
  </section>
</BaseLayout>

<style>
  .hero {
    padding: var(--space-3xl) 0;
    text-align: center;
  }

  .tagline {
    font-size: var(--text-2xl);
    font-weight: 500;
    line-height: 1.4;
    margin-bottom: var(--space-2xl);
    color: var(--color-text-primary);
  }

  .install-block {
    max-width: 500px;
    margin: 0 auto;
  }

  .install-alt {
    margin-top: var(--space-md);
    font-size: var(--text-sm);
    color: var(--color-text-secondary);
  }

  .install-alt code {
    color: var(--color-code-text);
    background: var(--color-surface);
    padding: 2px 6px;
    border-radius: 4px;
  }

  .outcomes {
    padding: var(--space-3xl) 0;
    border-top: 1px solid var(--color-border);
  }

  .outcomes-title {
    font-size: var(--text-xl);
    font-weight: 500;
    margin-bottom: var(--space-2xl);
    text-align: center;
    color: var(--color-text-primary);
  }

  .flow-diagram {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: var(--space-md);
    margin-bottom: var(--space-2xl);
    flex-wrap: wrap;
  }

  .flow-box {
    background: var(--color-surface);
    border: 1px solid var(--color-border);
    border-radius: 8px;
    padding: var(--space-lg) var(--space-xl);
    text-align: center;
    font-size: var(--text-sm);
    color: var(--color-text-primary);
    line-height: 1.4;
    min-width: 120px;
  }

  .flow-arrow {
    color: var(--color-text-secondary);
    font-size: var(--text-2xl);
  }

  .outcomes-list {
    max-width: 400px;
    margin: 0 auto var(--space-2xl);
    list-style: none;
    padding: 0;
  }

  .outcomes-list li {
    color: var(--color-text-secondary);
    padding-left: var(--space-lg);
    position: relative;
    margin-bottom: var(--space-sm);
  }

  .outcomes-list li::before {
    content: '•';
    position: absolute;
    left: 0;
    color: var(--color-accent);
  }

  .cta-link {
    display: inline-block;
    font-size: var(--text-base);
    color: var(--color-accent);
    text-align: center;
  }

  .cta-link:hover {
    color: var(--color-accent-hover);
  }

  .outcomes .container {
    text-align: center;
  }

  @media (min-width: 640px) {
    .hero {
      padding: var(--space-3xl) 0 calc(var(--space-3xl) * 1.5);
    }

    .tagline {
      font-size: var(--text-3xl);
    }

    .outcomes-title {
      font-size: var(--text-2xl);
    }
  }

  @media (min-width: 1024px) {
    .tagline {
      font-size: var(--text-4xl);
    }
  }

  @media (max-width: 500px) {
    .flow-diagram {
      flex-direction: column;
      gap: var(--space-sm);
    }

    .flow-arrow {
      transform: rotate(90deg);
    }
  }
</style>
